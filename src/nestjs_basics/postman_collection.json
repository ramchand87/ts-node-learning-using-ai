    "item": [
        {
            "name": "Get All Products",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://localhost:3000/products",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "products"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Filter Products by Name",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://localhost:3000/products?name=Mouse",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "products"
                    ],
                    "query": [
                        {
                            "key": "name",
                            "value": "Mouse"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Get Product by ID",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://localhost:3000/products/1",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "products",
                        "1"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Create Product",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Monitor\",\n    \"price\": 300\n}"
                },
                "url": {
                    "raw": "http://localhost:3000/products",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "products"
                    ]
                }
            },
            "response": []
        }
